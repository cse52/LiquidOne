<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= product.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/products/<%=product._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%=product.name%>" placeholder="Ex: Purifier">
                </div>
                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input class="form-control" type="text" name="brand" id="brand" value="<%=product.brand%>" placeholder="Ex: PureIt">
                </div>
                <div class="form-group">
                    <label for="catagory">Catagory</label>
                    <input class="form-control" type="text" name="catagory" id="catagory" value="<%=product.catagory%>" placeholder="Ex: Water Purifiers">
                </div>
                <div class="form-group">
                    <label for="cost">Price (in Rupees)</label>
                    <input class="form-control" type="number" name="cost" id="cost" value="<%=product.cost%>" placeholder="999" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%=product.description%>" placeholder="Technical Desc. etc.">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%=product.image%>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Post</button>
                </div>            </form>
            <a href="/products">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

