<% include ../partials/header %> 
    
  <div class="loader">
    <ul>
      <li class="circle"></li>
      <li class="circle"></li>
      <li class="circle"></li>
    </ul>
  </div>

  <div class="postload-content">
    <div id="after-hide">
      
    </div>

    <div id="before-hide" style="margin: 0; padding: 0;">
      <div id="Carousel-liquidOne" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#Carousel-liquidOne" data-slide-to="0" class="active"></li>
          <li data-target="#Carousel-liquidOne" data-slide-to="1"></li>
          <li data-target="#Carousel-liquidOne" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="item active">
            <img src="res/1.png" alt="#">
          </div>

          <div class="item">
            <img src="res/2.jpg" alt="#">
          </div>
          
          <div class="item">
            <img src="res/3.jpg" alt="#">
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#Carousel-liquidOne" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#Carousel-liquidOne" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      
      <div class="container-liq">
        <div class="cont-liq-title">
          <span class="font-weight-bold">Featured Brands</span>
          <a class="btn btn-primary " href="">View All</a>
        </div>
        <div class="row text-center flex-wrap" id="product-grid">
          <% products.forEach(function(product) {%>
              <div class="col-md-2 col-sm-3 col-xs-6">
                <a href="/products/<%= product._id %>" class="card">
                  <div class="thumbnail">
                    <img src="<%= product.image %>">
                    <div class="caption">
                      <span class="small-green-text">₹ <%= product.cost %> </span>
                      <h6 class="small-grey-text"><%= product.name %></h6>
                    </div>
                  </div>
                </a>
              </div>
          <% }); %>
        </div>

      <div class="container-liq">
        <div class="cont-liq-title">
          <span class="font-weight-bold">New Arrivals</span>
          <a class="btn btn-primary " href="">View All</a>
        </div>
        <div class="row text-center flex-wrap" id="product-grid">
          <% products.forEach(function(product) {%>
              <div class="col-md-2 col-sm-3 col-xs-6">
                <a href="/products/<%= product._id %>" class="card">
                  <div class="thumbnail">
                    <img src="<%= product.image %>">
                    <div class="caption">
                      <span class="small-green-text">₹ <%= product.cost %> </span>
                      <h6 class="small-grey-text"><%= product.name %></h6>
                    </div>
                  </div>
                </a>
              </div>
          <% }); %>
        </div>
      </div>
      <div class="container-liq">
        <div class="cont-liq-title">
          <span class="font-weight-bold">Recommended Products</span>
          <a class="btn btn-primary " href="">View All</a>
        </div>
        <div class="row text-center flex-wrap" id="product-grid">
          <% products.forEach(function(product) {%>
              <div class="col-md-2 col-sm-3 col-xs-6">
                <a href="/products/<%= product._id %>" class="card">
                  <div class="thumbnail">
                    <img src="<%= product.image %>">
                    <div class="caption">
                      <span class="small-green-text">₹ <%= product.cost %> </span>
                      <h6 class="small-grey-text"><%= product.name %></h6>
                    </div>
                  </div>
                </a>
              </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

<% include ../partials/footer %>
